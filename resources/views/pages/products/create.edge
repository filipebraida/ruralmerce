@layouts.app()
  @form({ action: route('products.store') })
    <div>
      <label for="name">
        Nome do Produto
      </label>
      @!input({
        name: 'name',
        type: 'text'
      })
    </div>

    <div>
      <label for="pricer">
        Preço
      </label>
      @!input({
        name: 'price',
        type: 'text'
      })
    </div>

    <div>
      <label for="description">
        Descrição
      </label>
      @!input({
        name: 'description',
        type: 'text'
      })
    </div>

    <div>
      <label for="categoryId">
        Descrição
      </label>
      <select name="categoryId">
        @each(category in categories)
          <option value="{{ category.id }}">{{ category.name }}</option>
        @end
      </select>
    </div>

    @button({
      type: 'submit'
    })
      Salvar
    @end
  @end
@end
